<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slide1"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/imageViewSplashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/fab_record_mdpi" />

    <com.nandanu.halomama.roboto.RobotoTextView
        android:id="@+id/textViewSplashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewSplashLogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="halomama"
        android:textColor="#FFFFFF"
        app:typeface="roboto_light" />

</RelativeLayout>