<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/lay_header2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3b3444"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButtonBatalkan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_dismiss_mdpi" />

        <it.fhab.halomama.roboto.RobotoTextView
            android:id="@+id/textViewBatalkan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="8dp"
            android:text="BATALKAN"
            android:textColor="#fdce31"
            android:textSize="11dp"
            app:typeface="roboto_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/lay_header2"
        android:background="#a63b3444"
        android:orientation="vertical" >

        <it.fhab.halomama.roboto.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="20dp"
            android:text="Tunjukkan Perasaanmu"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:typeface="roboto_medium" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="#f23b3444"
            android:paddingBottom="26dp"
            android:paddingLeft="53dp"
            android:paddingRight="53dp"
            android:paddingTop="36dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageViewSedih"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_sedih_hdpi" />

                <ImageView
                    android:id="@+id/imageViewBosan"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_bosan_hdpi" />

                <ImageView
                    android:id="@+id/imageViewMarah"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_marah_hdpi" />

                <ImageView
                    android:id="@+id/imageViewWasWas"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_waswas_hdpi" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel1"
                    android:gravity="center"
                    android:text="sedih"
                    android:textColor="#69ccf0"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel2"
                    android:gravity="center"
                    android:text="bosan"
                    android:textColor="#ce80ae"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel3"
                    android:gravity="center"
                    android:text="marah"
                    android:textColor="#ec68aa"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel4"
                    android:gravity="center"
                    android:text="was-was"
                    android:textColor="#fad08c"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageViewKaget"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_kaget_hdpi" />

                <ImageView
                    android:id="@+id/imageViewTakut"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_takut_hdpi" />

                <ImageView
                    android:id="@+id/imageViewPercaya"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_percaya_hdpi" />

                <ImageView
                    android:id="@+id/imageViewSenang"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/emotion_button_senang_hdpi" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel5"
                    android:gravity="center"
                    android:text="kaget"
                    android:textColor="#83c7b0"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel6"
                    android:gravity="center"
                    android:text="takut"
                    android:textColor="#b9d37f"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel7"
                    android:gravity="center"
                    android:text="percaya"
                    android:textColor="#dbdc71"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>

                <it.fhab.halomama.roboto.RobotoTextView
                    android:id="@+id/TextViewFeel8"
                    android:gravity="center"
                    android:text="senang"
                    android:textColor="#f6e85a"
                    app:typeface="roboto_medium" >
                </it.fhab.halomama.roboto.RobotoTextView>
            </TableRow>
        </TableLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <it.fhab.halomama.roboto.RobotoTextView
                android:id="@+id/textViewFeelingDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:text="Supaya benar-benar"
                android:textColor="#ffffff"
                android:textSize="13dp"
                app:typeface="roboto_medium" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/buttonUpload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_upload_dan_bagikan_hdpi" />

        <ImageButton
            android:id="@+id/buttonUlang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_rekam_ulang_hdpi" />
    </LinearLayout>

</RelativeLayout>